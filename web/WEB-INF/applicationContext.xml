<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="test.TestService" id="testService">
        <property name="name" value="spring"/>
    </bean>

    <!-- data connection -->
    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/chatroom"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>

    <!-- session factory -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.connection.url">jdbc:mysql://localhost:3306/chatroom</prop>
                <prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
            </props>
        </property>
        <property name="annotatedClasses">
            <list>
                <value>bean.UserEntity</value>
                <value>bean.FriendshipEntity</value>
                <value>bean.GroupEntity</value>
                <value>bean.MessageEntity</value>
                <value>bean.MessageTypeEntity</value>
                <value>bean.RoleEntity</value>
                <value>bean.UserStatusEntity</value>
            </list>
        </property>
    </bean>

    <!-- hibernate -->
    <bean id="dbAction" class="action.DbActionImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>